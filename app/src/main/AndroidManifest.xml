<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.m_expense">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MExpense"
        tools:targetApi="31">
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="Login">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".UpdateExpenseActivity"
            android:exported="true"
            android:label="Update Expense"
            android:parentActivityName=".ExpenseActivity" />
        <activity
            android:name=".ExpenseActivity"
            android:exported="true"
            android:label="Trip Management"
            android:parentActivityName=".TripActivity" />
        <activity
            android:name=".AddExpenseActivity"
            android:exported="true"
            android:label="Add New Expense" />
        <activity
            android:name=".UpdateTripActivity"
            android:exported="true"
            android:label="Update Trip"
            android:parentActivityName=".TripActivity" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="M-expense"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTripActivity"
            android:exported="true"
            android:label="Add New Trip"
            android:parentActivityName=".TripActivity" />
        <activity
            android:name=".TripActivity"
            android:exported="true"
            android:label="Trip Management" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>